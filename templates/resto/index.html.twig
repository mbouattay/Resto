{% extends 'base.html.twig' %}

{% block title %}Resto index{% endblock %}

{% block body %}
    <h1>Resto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Tel</th>
                <th>Fax</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resto in restos %}
            <tr>
                <td>{{ resto.id }}</td>
                <td>{{ resto.nom }}</td>
                <td>{{ resto.adresse }}</td>
                <td>{{ resto.tel }}</td>
                <td>{{ resto.fax }}</td>
                <td>{{ resto.ville }}</td>
                <td>
                    <a href="{{ path('app_resto_show', {'id': resto.id}) }}">show</a>
                    <a href="{{ path('app_resto_edit', {'id': resto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_resto_new') }}">Create new</a>
{% endblock %}
